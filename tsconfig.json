{
    "compilerOptions": {
        "target": "es5",
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "types": ["node"],
        "lib": ["es2019", "dom"],
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "incremental": true,
        "esModuleInterop": true,
        "jsx": "react"
    },
    "include": ["dist/typescript/*.tsx"],
    "exclude": ["src/**"]
}
